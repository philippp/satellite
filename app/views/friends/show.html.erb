<h1>Photos of <%= @friend.name %></h1>

<% tablurize(@friend.tags.map{|t| t.asset}) do |row_assets,options| %>
  <% rowize(row_assets, options) do |asset| %>
    <%= link_to(asset_tag(asset,
                          {:id => "img_asset_#{asset.id}", :size => :thumb}),
                          photo_path(asset, :context => :all)) %>
  <% end %>
  <% rowize(row_assets, options) do |asset| %>
    <% if !asset.title_abr.empty? %>
      <%= asset.title_abr %><br />
    <% end %>
  <% end %>
<% end %>

