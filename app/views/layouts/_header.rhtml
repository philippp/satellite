<%= link_to "Main", home_url %>
<% if logged_in? %>
	<%= link_to "Logout", session_path, :method => :delete %>
<% else %>
  <%= link_to "Login", new_session_path %>
  <%= link_to "Sign Up", new_user_path %>
<% end %>

<% if flash.any? %>
  <div id="flash"><%= flash[:notice] %></div><% flash.clear %>
<% end %>
